<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:gravity="center_vertical"
	android:orientation="vertical">

	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<Button
			android:layout_width="100dp"
			android:layout_height="100dp"
			android:text="C"
			android:layout_weight="1.0"
			android:textStyle="bold"
			android:textSize="20sp"
			android:id="@+id/mainButton10"/>

		<Button
			android:layout_width="100dp"
			android:layout_height="100dp"
			android:text="/"
			android:layout_weight="1.0"
			android:textSize="20sp"
			android:textStyle="bold"
			android:id="@+id/mainButton11"/>

		<Button
			android:layout_width="100dp"
			android:layout_height="100dp"
			android:text="*"
			android:layout_weight="1.0"
			android:textSize="20sp"
			android:textStyle="bold"
			android:id="@+id/mainButton12"/>

		<Button
			android:layout_width="100dp"
			android:layout_height="100dp"
			android:text="-"
			android:layout_weight="1.0"
			android:textSize="20sp"
			android:textStyle="bold"
			android:id="@+id/mainButton13"/>

	</LinearLayout>

	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<Button
			android:layout_width="100dp"
			android:layout_height="100dp"
			android:text="7"
			android:layout_weight="1.0"
			android:textSize="20sp"
			android:textStyle="bold"
			android:id="@+id/mainButton7"/>

		<Button
			android:layout_width="100dp"
			android:layout_height="100dp"
			android:text="8"
			android:layout_weight="1.0"
			android:textSize="20sp"
			android:textStyle="bold"
			android:id="@+id/mainButton8"/>

		<Button
			android:layout_width="100dp"
			android:layout_height="100dp"
			android:text="9"
			android:layout_weight="1.0"
			android:textStyle="bold"
			android:textSize="20sp"
			android:id="@+id/mainButton9"/>

		<Button
			android:layout_width="100dp"
			android:layout_height="100dp"
			android:text="+"
			android:layout_weight="1.0"
			android:textSize="20sp"
			android:textStyle="bold"
			android:id="@+id/mainButton14"/>

	</LinearLayout>

	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<Button
			android:layout_width="100dp"
			android:layout_height="100dp"
			android:text="4"
			android:layout_weight="1.0"
			android:textSize="20sp"
			android:textStyle="bold"
			android:id="@+id/mainButton4"/>

		<Button
			android:layout_width="100dp"
			android:layout_height="100dp"
			android:text="5"
			android:layout_weight="1.0"
			android:textSize="20sp"
			android:textStyle="bold"
			android:id="@+id/mainButton5"/>

		<Button
			android:layout_width="100dp"
			android:layout_height="100dp"
			android:text="6"
			android:layout_weight="1.0"
			android:textSize="20sp"
			android:textStyle="bold"
			android:id="@+id/mainButton6"/>

		<Button
			android:layout_width="100dp"
			android:layout_height="100dp"
			android:text="="
			android:layout_weight="1.0"
			android:textStyle="bold"
			android:textSize="20sp"
			android:id="@+id/mainButton15"/>

	</LinearLayout>

	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<Button
			android:layout_width="100dp"
			android:layout_height="100dp"
			android:text="1"
			android:layout_weight="1.0"
			android:textSize="20sp"
			android:textStyle="bold"
			android:id="@+id/mainButton1"/>

		<Button
			android:layout_width="100dp"
			android:layout_height="100dp"
			android:text="2"
			android:layout_weight="1.0"
			android:textSize="20sp"
			android:textStyle="bold"
			android:id="@+id/mainButton2"/>

		<Button
			android:layout_width="100dp"
			android:layout_height="100dp"
			android:text="3"
			android:layout_weight="1.0"
			android:textStyle="bold"
			android:textSize="20sp"
			android:id="@+id/mainButton3"/>

		<Button
			android:layout_width="100dp"
			android:layout_height="100dp"
			android:text="."
			android:layout_weight="1.0"
			android:textStyle="bold"
			android:textSize="20sp"
			android:id="@+id/mainButton16"/>

	</LinearLayout>

	<Button
		android:layout_width="match_parent"
		android:layout_height="80dp"
		android:text="0"
		android:textSize="20sp"
		android:textStyle="bold"
		android:id="@+id/mainButton0"/>

</LinearLayout>

